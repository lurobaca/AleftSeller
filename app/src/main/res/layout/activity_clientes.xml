<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:textColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#284072"
            android:orientation="vertical"
            android:textColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#284072"
                android:orientation="horizontal"
                android:textColor="#ffffff">

                <CheckBox
                    android:id="@+id/cb_Cod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0.85"
                    android:button="@drawable/check_false"
                    android:text="Codigo"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/edt_buscarCliente"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:layout_weight="0.85"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:padding="3dp">

                    <requestFocus />
                </EditText>

                <CheckBox
                    android:id="@+id/cb_Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:button="@drawable/check_false"
                    android:text="Comer"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#284072"
                android:orientation="vertical"
                android:textColor="#ffffff">

                <Spinner
                    android:id="@+id/CombBox_Dia_Visita"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:theme="@style/MooTheme"

                    />


            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:textColor="#000000"></ListView>
        </HorizontalScrollView>
    </LinearLayout>


</RelativeLayout>
