<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#284072"
      android:textColor="#FFFFFF"
    tools:context="${relativePackage}.${activityClass}" >
   <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
   
        android:orientation="vertical"
        android:textColor="#ffffff" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
          android:layout_marginTop="25dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_FechaIni"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0.49"
                android:text="Fecha INI"
                android:textColor="#FFFFFF"
                
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_FechaIni"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_weight="0.49"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:enabled="FALSE"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Fecha inicio" 
                android:background="@drawable/rounded_edittext"
                android:padding="1dp"
                android:layout_margin="1dp">
           
            </EditText>

            <Button
                android:id="@+id/btn_FechaIni"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                
                android:onClick="fechaIni"
                android:text="Fecha"
                 android:background="@drawable/mybutton"
               android:textColor="#000000"/>
            
         </LinearLayout>
       
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
       
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_FechaFin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                 android:layout_margin="1dp"
                android:layout_weight="0.49"
                android:text="Fecha FIN"
            android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_FechaFin"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_weight="0.49"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:enabled="FALSE"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Fecha Final" 
              android:background="@drawable/rounded_edittext"
                   android:padding="1dp"
                   android:layout_margin="1dp">
           
            </EditText>

            <Button
                android:id="@+id/btn_FechaFin"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                    android:background="@drawable/mybutton"
               android:textColor="#000000"
                android:onClick="FechaFin"
                android:text="Fecha"
                />
            
         </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
            android:background="#F5F5DC"
            android:orientation="horizontal"
            android:textColor="#000000" >
    
     
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
     
            android:orientation="horizontal"
         >

            <CheckBox
                android:id="@+id/CHBOX_PEDIDOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                   android:textColor="#FFFFFF"
                   android:layout_margin="2dp"
                       android:button="@drawable/check_false"
                android:text="PEDIDOS" />

            <CheckBox
                android:id="@+id/CHBOX_PAGOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                   android:layout_margin="2dp"
                    android:button="@drawable/check_false"
                   android:textColor="#FFFFFF"
                
                android:text="PAGOS" />

        </LinearLayout>
        
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
        
            android:orientation="horizontal"
          >

            <CheckBox
                android:id="@+id/CHBOX_DEPOSITOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                   android:textColor="#FFFFFF"
                      android:layout_margin="2dp"
                       android:button="@drawable/check_false"
                android:text="DEPOSITOS" />

            <CheckBox
                android:id="@+id/CHBOX_NOVISITAS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                   android:textColor="#FFFFFF"
                      android:layout_margin="2dp"
                       android:button="@drawable/check_false"
                android:text="NO VISITAS" />

        </LinearLayout>
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
        
            android:orientation="horizontal"
          >

            <CheckBox
                android:id="@+id/CHBOX_GASTOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                   android:textColor="#FFFFFF"
                      android:layout_margin="2dp"
                       android:button="@drawable/check_false"
                android:text="GASTOS" />

         

        </LinearLayout>
              <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="558"
          
            android:orientation="vertical"
             >

           <Button
               android:id="@+id/btn_Borrar"
               android:layout_width="fill_parent"
               android:layout_height="45dp"
               android:layout_margin="1dp"
               
               android:onClick="EliminaSelecionado"
               android:text="BORRAR SELECCIONADO"
               
                android:background="@drawable/mybutton"
               android:textColor="#000000" />

            <Button
                android:id="@+id/btn_BorrarTodo"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_margin="1dp"
               
                android:onClick="EliminaTodo"
                android:text="BORRAR TODO"
                android:background="@drawable/mybutton"
               android:textColor="#000000" />

        </LinearLayout>
  </LinearLayout>
    </ScrollView>
</RelativeLayout>