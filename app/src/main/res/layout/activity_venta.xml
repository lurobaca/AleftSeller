<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="#284072"
    android:padding="5dp">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/PanelPrincipal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#C4D7E6"
            android:orientation="vertical"
            android:textColor="#000000">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:background="#284072"
                android:orientation="horizontal"
                android:textColor="#000000">

                <TextView
                    android:id="@+id/txtv_Fecha1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Desde el"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/edit_Fecha1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_margin="1dp"
                    android:layout_weight="0.08"

                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:ems="10"

                    android:inputType="date"
                    android:padding="3dp" />


                <Button
                    android:id="@+id/btn_pickDate"

                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/mybutton"
                    android:text="Fec"

                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:background="#284072"
                android:orientation="horizontal"
                android:textColor="#000000">

                <TextView
                    android:id="@+id/txtv_Fecha2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Hasta el"
                    android:textColor="#ffffff" />

                <EditText
                    android:id="@+id/edit_Fecha2"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_margin="1dp"
                    android:layout_weight="0.08"

                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:ems="10"

                    android:inputType="date"
                    android:padding="3dp" />

                <Button
                    android:id="@+id/btn_pickDate2"

                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/mybutton"
                    android:text="Fec"

                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#284072"
                android:orientation="horizontal"
                android:textColor="#000000">

                <CheckBox
                    android:id="@+id/chbx_Resumido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:button="@drawable/check_true"
                    android:checked="true"
                    android:text="Imprimir Resumido"
                    android:textColor="#ffffff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_totales"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dp"

                    android:text="TOTALES"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_totalVenta"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Venta ₵"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/edtx_totalVentaBruta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="3dp"
                    android:paddingTop="15dp"
                    android:text="0">

                </EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_totalDevolucion"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Devolucion ₵"
                    android:textSize="14sp" />


        <EditText
                    android:id="@+id/edtx_totalDevolucion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="3dp"
                    android:paddingTop="15dp"
                    android:text="0">

                </EditText>



                <EditText
                    android:id="@+id/edtx_totalDEPOSITOS2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="3dp"
                    android:paddingTop="15dp"
                    android:text="0">

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#284072"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_totalReal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Total ₵"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtx_totalVentaNeta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="3dp"
                    android:text="0">

                    <requestFocus />
                </EditText>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/txtv_epacio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_totalCuota"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Cuota ₵"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtx_totalCuota"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="3dp"
                    android:text="0">

                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#284072"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_totalFalta"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="Falta ₵"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtx_totalFalta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="3dp"
                    android:text="0">

                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#284072"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:textAlignment="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
