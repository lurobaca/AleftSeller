<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="#284072"
    tools:context="${relativePackage}.${activityClass}" >

    

        
         
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
      android:layout_margin="5dp"
        android:orientation="vertical"
        android:textColor="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="#EAF1F6"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textColor="#ffffff" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#284072"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:textColor="#000000" >

            <TextView
                android:id="@+id/txtV_Fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textColor="#ffffff"
                android:textSize="15sp" 
                android:padding="3dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_BuscarPedidos"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/mybutton"
                android:onClick="DepositosHechos"
                android:text="Hechos"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_ConseDepos"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                android:layout_weight="0.08"
                android:background="@drawable/rounded_edittext"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btn_pickDate1"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/mybutton"
                android:onClick="Clientes"
                android:text="Fecha"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
           
            android:orientation="horizontal"
               android:layout_marginBottom="10dp"
            android:textColor="#ffffff" >

            <TextView
                android:id="@+id/txtv_fecha"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Fecha     "
                android:textColor="#ffffff" />

               <EditText
                   android:id="@+id/edt_FechaDeposito"
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:layout_marginLeft="1dp"
                   android:background="@drawable/rounded_edittext"
                   android:clickable="false"
                   android:cursorVisible="false"
                   android:ems="10"
                   android:enabled="false"
                   android:focusable="false"
                   android:focusableInTouchMode="false"
                   android:gravity="center"
                   android:hint="Fecha de deposito"
                   android:padding="1dp" >

                <requestFocus />
            </EditText>

        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                   android:layout_marginBottom="10dp"
   
                    android:orientation="horizontal"
                    android:textColor="#000000" >

                    <TextView
                        android:id="@+id/txtv_NumDep"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:text="Depo#"
                        android:textColor="#ffffff" />

          <EditText
              android:id="@+id/edt_NumDep"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_margin="2dp"
              android:background="@drawable/rounded_edittext"
              android:ems="10"
              android:gravity="center"
              android:hint="Numero del Deposito"
              android:inputType="number"
              android:padding="1dp" >

           <requestFocus />
           </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
               android:layout_marginBottom="10dp"
      
            android:orientation="horizontal"
            android:textColor="#000000" >

            <TextView
                android:id="@+id/txtv_Monto"
                android:layout_width="70dp"
                android:layout_height="wrap_content"


                android:text="Monto"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/edt_monto"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Indique el Monto"
                android:inputType="numberDecimal"
                android:padding="1dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="1dp"
            android:background="@drawable/layout_redondeado"
            android:orientation="horizontal"
            android:textColor="#000000" >

            <TextView
                android:id="@+id/txtv_Banco"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Banco    :"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spin_Bancos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="1dp" />
        </LinearLayout>
           
        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_alignParentLeft="true"
        	    android:layout_alignParentTop="true"
        	    android:background="#284072"
        	    android:orientation="vertical"
        	    android:textColor="#000000" >

        		<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		        android:layout_marginBottom="10dp"
            android:background="@layout/box"
        		    android:orientation="horizontal"
        		    android:textColor="#000000" >

                    <CheckBox
                        android:id="@+id/ChBox_Boleta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="0.49"
                        android:button="@drawable/check_true"
                        android:checked="true"
                        android:text="ES UNA BOLETA"
                        android:textColor="#FFFFFF" />
        		</LinearLayout>

                <TextView
                    android:id="@+id/txtv_Comentario"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Comentario"
                    android:textColor="#ffffff" />

    <EditText
        android:id="@+id/edtx_Comentario"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Digite un comentario acerca de este deposito"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minLines="5"
        android:padding="5dp"
        android:textColor="#000000" >

           </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:textColor="#000000" >
        </LinearLayout>
    </LinearLayout>

    
 
</RelativeLayout>