<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/PanelPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
          android:background="#EAF1F6" >
        
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
                >
        
        <TextView
	    android:id="@+id/txtv_NumFactura"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="# Factural:" />

		<EditText
		android:id="@+id/EText_NumFactura"
		android:layout_width="318dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:background="@drawable/rounded_edittext"
		android:gravity="top|left"
		android:padding="3dp"
		android:scrollbars="vertical"
		android:textColor="#000000" 
		android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"/>

		</LinearLayout>
		<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
		android:id="@+id/txtv_TotalFac"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="Total:" />

		<EditText
		android:id="@+id/EText_TotalFac"
		android:layout_width="318dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:background="@drawable/rounded_edittext"
		android:gravity="top|left"
		android:padding="3dp"
		android:scrollbars="vertical"
		android:textColor="#000000"
		android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false" />

		</LinearLayout>
  
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
				android:id="@+id/txtv_TotalSaldo"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="Saldo:" />

		   <EditText
		       android:id="@+id/EText_TotalSaldo"
		       android:layout_width="318dp"
		       android:layout_height="wrap_content"
		       android:layout_marginBottom="5dp"
		       android:background="@drawable/rounded_edittext"
		       android:gravity="top|left"
		       android:padding="3dp"
		       android:scrollbars="vertical"
		       android:textColor="#000000" 
		       android:clickable="false" 
               android:cursorVisible="false" 
               android:focusable="false" 
               android:focusableInTouchMode="false"/>

			</LinearLayout>
  <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal" >
        
           <TextView
				android:id="@+id/txtv_TotalGastos"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="Gastos:" />

		   <EditText
		       android:id="@+id/edtx_MontoGasto"
		        android:layout_width="fill_parent"
			    android:layout_height="30dp"
			    android:ems="10"
			    android:hint="Monto"
			    android:background="@drawable/rounded_edittext"
			    android:inputType="numberDecimal"  />

			</LinearLayout>
  	<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:orientation="horizontal" >
  
		<LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
        
			 <TextView
				android:id="@+id/txtv_MontoEfectivo"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="Efectivo" />

			<EditText
			    android:id="@+id/edtx_MontoEfectivo"
			    android:layout_width="fill_parent"
			    android:layout_height="30dp"
			    android:ems="10"
			    android:hint="Monto"
			    android:background="@drawable/rounded_edittext"
			    android:inputType="numberDecimal" >

				<requestFocus />
			</EditText>
         </LinearLayout>
        
		
	
           </LinearLayout>
		
  			<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:orientation="horizontal" >
						
		<LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:orientation="horizontal"
            android:layout_gravity="center_vertical|left"
            >
        
			 <TextView
			     android:id="@+id/txtv_Cheque"
			     android:layout_width="100dp"
			     android:layout_height="wrap_content"
			     android:text="Cheque" />

			<EditText
			    android:id="@+id/edtx_Cheque"
			    android:layout_width="120dp"
			    android:layout_height="30dp"
			    android:ems="10"
			    android:hint="Monto"
			   android:background="@drawable/rounded_edittext"
			    android:inputType="numberDecimal" >
				
			</EditText>
         </LinearLayout>
         
		
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
         android:layout_gravity="center_vertical|center" >
        
     <TextView
        android:id="@+id/txtv_NumCheque"
        android:layout_width="wrap_content"
          android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        android:text="#" />

     <EditText
         android:id="@+id/edtx_NumCheque"
         android:layout_width="150dp"
         android:layout_height="30dp"
         android:layout_toRightOf="@+id/textView1"
         android:ems="10"
         android:hint="#Cheque"
        android:background="@drawable/rounded_edittext"
         android:inputType="number" >

      </EditText>
      </LinearLayout>
	  
	       </LinearLayout> 
	       
  			<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal" >
    <TextView
			     android:id="@+id/txtv_PostFecha"
			     android:layout_width="100dp"
			     android:layout_height="wrap_content"
			     android:text="PosFechar" />

    <EditText
        android:id="@+id/edit_PostFecha"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="date" 
        android:background="@drawable/rounded_edittext"/>

        </LinearLayout>
  			
  			
  			
  			
  			<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal" >
    <TextView
			     android:id="@+id/txtv_Bancochq"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="Banco" />

     <Spinner
                      android:id="@+id/spin_Bancos"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
               
                    android:layout_marginTop="2dp"   />
     
        </LinearLayout>
		<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:orientation="horizontal"
            android:layout_gravity="center_vertical|right" >
						
		<LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:orientation="horizontal" >
        
			 <TextView
			     android:id="@+id/txtv_Tranferencia"
			     android:layout_width="100dp"
			     android:layout_height="wrap_content"
			     android:text="Tranferencia" />

			<EditText
			    android:id="@+id/edtx_Tranferencia"
			    android:layout_width="120dp"
			    android:layout_height="30dp"
			    android:ems="10"
			    android:hint="Monto"
			    android:inputType="numberDecimal" 
			  android:background="@drawable/rounded_edittext">
			
			</EditText>
         </LinearLayout>
         
		
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
     <TextView
        android:id="@+id/txtv_NumTranferencia"
        android:layout_width="wrap_content"
          android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        android:text="#" />

     <EditText
         android:id="@+id/edtx_NumTranferencia"
         android:layout_width="150dp"

         android:layout_height="30dp"
         android:layout_toRightOf="@+id/textView1"
         android:ems="10"
         android:hint="#Tranferencia"
         android:inputType="number" 
         android:background="@drawable/rounded_edittext">

      </EditText>
      </LinearLayout>
      
      
	  
	       </LinearLayout> 
	       
		<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
    <TextView
			     android:id="@+id/txtv_Banco"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="Banco" />

     <Spinner
         android:id="@+id/spinner2"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp" />
     
        </LinearLayout> 
        
	
  			 <LinearLayout
  			     android:layout_width="match_parent"
  			     android:layout_height="wrap_content"
  			     android:orientation="horizontal"
  			         android:background="#284072" >

  			     <Button
  			         android:id="@+id/btn_CALCULAR"
  			        android:background="@drawable/mybutton"
               android:textColor="#000000"
                   android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginBottom="1dp"
                 android:layout_marginRight="2dp"
  			         android:layout_weight="0.36"
  			         android:onClick="CALCULAR"
  			         android:text="CALCULAR" />

		 

  			     <Button
  			         android:id="@+id/btn_Agregar"
  			        android:background="@drawable/mybutton"
               android:textColor="#000000"
                   android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginBottom="1dp"
                 android:layout_marginRight="2dp"
  			         android:layout_weight="0.33"
  			         android:onClick="ABONAR"
  			         android:text="ABONAR" />

  			 </LinearLayout> 
         
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >
        
     <TextView
         android:id="@+id/txtv_TOTAL"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:text="TOTAL ABONO ₵" />
    
    <EditText
        android:id="@+id/edtx_TOTAL"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
              android:background="@drawable/rounded_edittext"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false" >
    </EditText>
         </LinearLayout>
     
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >
        
     <TextView
         android:id="@+id/txtv_SaldoResTOTAL"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:text="TOTAL SALDO ₵" />
    
    <EditText
        android:id="@+id/edtx_SaldoResTOTAL"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/rounded_edittext"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false" >
    </EditText>
         </LinearLayout> 
      
          	<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:orientation="vertical" >
    <TextView
			     android:id="@+id/txtv_Comentario"
			     android:layout_width="100dp"
			     android:layout_height="wrap_content"
			     android:text="Comentario" />

    <EditText
         android:id="@+id/edtx_Comentario"
         android:layout_width="match_parent"
          android:inputType="textMultiLine"
				android:lines="3" 
    			android:minLines="3" 
    			android:gravity="top|left" 
  
          android:layout_height="30dp"
           android:background="@drawable/rounded_edittext"
         android:ems="10"
          >
           </EditText>
        </LinearLayout>
                <LinearLayout
                     android:id="@+id/PanelModifcar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          
    

      <Button
          android:id="@+id/btn_Eliminar"
          	              android:background="#FFEFA8"
               android:textColor="#000000"
                   android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="1dp"
                 android:layout_marginRight="2dp"
           android:onClick="ELIMINAR"
          android:text="ELIMINAR" />

 

                

      </LinearLayout> 
          
             
     
		
  </LinearLayout>
  </ScrollView>
</RelativeLayout>
