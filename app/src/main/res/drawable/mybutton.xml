<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#CCA800" />
         <gradient android:angle="-90" android:startColor="#FFEFA8" android:endColor="#CCA800"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FFEFA8" />
         <solid android:color="#FFEFA8"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#FFEFA8" />
         <gradient android:angle="-90" android:startColor="#FFEFA8" android:endColor="#FFE466" />            
     </shape>
 </item>
</selector>